<h1>Burgers!</h1>

<h2>Burgers make me hungry</h2>

<ul>
  {{#each burger}}
    {{#unless this.devoured}}
      {{> burger/burgers-block hungry=true}}
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burger}}
    {{#if hungry}}
      {{> burger/burgers-block hungry=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="hungry">hungry?</label><br>
    <input type="radio" name="" value="1" >Yes!<br>
    <input type="radio" name="" value="0"> No!
  </div>

  <button type="submit">Add burger</button>
</form>
